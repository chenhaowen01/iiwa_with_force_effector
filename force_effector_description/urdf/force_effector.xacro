<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find force_effector_description)/urdf/force_effector.gazebo.xacro"/>
    <xacro:include filename="$(find force_effector_description)/urdf/force_effector.transmission.xacro"/>

    <xacro:macro name="force_effector" params="parent robot_name *origin">
        <joint name="${parent}_${robot_name}_joint" type="fixed">
            <xacro:insert_block name="origin"/>
            <parent link="${parent}" />
            <child link="${robot_name}_link_0" />
        </joint>
        <link name="${robot_name}_link_0">
            <inertial>
                <origin xyz="-0.016368 0.000088 -0.044438" rpy="0 0 0"/>
                <mass value="2.105"/>
                <inertia ixx="0.007661" ixy="0.000034" ixz="-0.001075" iyy="0.008193" iyz="0.000009" izz="0.003594" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_0.STL"/>
                </geometry>
                <material name="Brown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_0.STL"/>
                </geometry>
                <material name="Brown"/>
            </collision>
        </link>

        <joint name="${robot_name}_joint_1" type="prismatic">
            <axis xyz="0 0 1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${robot_name}_link_0"/>
            <child link="${robot_name}_link_1"/>
            <limit lower="0" upper="0.01" effort="50" velocity="1" />
        </joint>
        <link name="${robot_name}_link_1">
            <inertial>
                <origin xyz="0.000633 0.000526 0.051434" rpy="0 0 0"/>
                <mass value="0.124"/>
                <inertia ixx="0.000091" ixy="0.000008" ixz="-0.000002" iyy="0.000071" iyz="-0.000001" izz="0.000077" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_1.STL"/>
                </geometry>
                <material name="Grey"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_1.STL"/>
                </geometry>
                <material name="Grey"/>
            </collision>
        </link>
        <joint name="${robot_name}_joint_2" type="continuous">
            <axis xyz="0 0 1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="${robot_name}_link_1"/>
            <child link="${robot_name}_link_2"/>
        </joint>
        <link name="${robot_name}_link_2">
            <inertial>
                <origin xyz="-0.000124 -0.000104 0.105" rpy="0 0 0"/>
                <mass value="2.105"/>
                <inertia ixx="0.000354" ixy="0.000000" ixz="0.000001" iyy="0.000354" iyz="0.000000" izz="0.000209" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_2.STL"/>
                </geometry>
                <material name="Brown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://force_effector_description/meshes/visual/force_effector_link_2.STL"/>
                </geometry>
                <material name="Brown"/>
            </collision>
        </link>
        <joint name="${robot_name}_tip_joint" type="fixed">
            <origin xyz="0 0 0.1492" rpy="0 0 0"/>
            <parent link="${robot_name}_link_2"/>
            <child link="${robot_name}_link_ee"/>
        </joint>
        <link name="${robot_name}_link_ee"/>

        <xacro:force_effector_gazebo robot_name="${robot_name}" />
        <xacro:force_effector_transmission robot_name="${robot_name}"/>
    </xacro:macro>

</robot>